<%- include('partials/header')    %>

<div class="container">

    <% if (locals.errors) { %>
        <div  class="alert alert-danger">
                <%  errors.forEach(function(error)   {   %>
                    <%= error.msg %>
                    <br>
                <%  })  %>
        </div>
    <% }  %>
    <h1 class="text-center">Register a new account </h1>
    <div style="width: 30%; margin:25px auto;">
        <form action="/users/register" method="POST" >
            <div class="form-group">
                <input type="text" value="<%= (!!locals.name)?name:'' %>" class="form-control" name="name" placeholder="full name">
            </div>
            <div class="form-group">
               <input type="text" value="<%= (!!locals.username)?username:'' %>" class="form-control" name="username" placeholder="username">
           </div>
           <div class="form-group">
            <input type="email" value="<%= (!!locals.email)?email:'' %>"  class="form-control" placeholder="email address" name="email">
        </div>
           <div class="form-group">
            <input type="password" value="<%= (!!locals.password)?password:'' %>"class="form-control" name="password" placeholder="password">
        </div>
            <div class="form-group">
                <input type="password" value="<%= (!!locals.password2)?password2:'' %>"class="form-control" placeholder="confirm password" name="cpassword">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-lg btn-block" value="submit!">
            </div>
        </form>
        already have account?<a href="./login">Login!</a>
    </div>
       
</div>

<%-  include('partials/footer')    %>