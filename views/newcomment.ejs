<%- include('partials/header')    %>

<div class="container">

    <% if (locals.errors) { %>
        <div  class="alert alert-danger">
                <%  errors.forEach(function(error)   {   %>
                    <%= error.msg %>
                    <br>
                        
                <%  })  %>
        </div>
    <% }  %>
    <h1 class="text-center">Add New Comment To <%= campground.name %></h1>
    <div style="width: 30%; margin:25px auto;">
        <form action="/campgrounds/comments/<%= campground._id %>" method="POST" >
            <div class="form-group">
                <input type="text" class="form-control" name="comment[text]" placeholder="Text">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="image url" name="comment[author]">
            </div>
            
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-lg btn-block" value="submit!">
            </div>
        </form>
        <a  href="/campgrounds/<%= campground._id %>/">Go Back</a>
    </div>
       
</div>

<%-  include('partials/footer')    %>